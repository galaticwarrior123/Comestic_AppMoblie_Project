<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anhnenbackgroundadmin"
    tools:context=".Controller.User.User.UserFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgUserFragment"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="60dp"
        android:scaleType="centerCrop"
        android:background="@drawable/image_button_round_corner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/txtUserFragmentName"
        android:layout_width="201dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgUserFragment"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="388dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="95dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnUserFragmentUpdateProfile"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="#FF8A65"
            android:text="Thông tin cá nhân"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnUserFragmentOrder"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="#FF8A65"
            android:text="Đơn hàng của tôi"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnUserFragmentChangePassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="#FF8A65"
            android:text="Đổi mật khẩu"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnUserFragmentLogOut"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="#FF8A65"
            android:text="Đăng xuất" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>